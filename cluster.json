{
  "cluster": {
    "name": "k3s-ha-production",
    "version": "v1.31.1+k3s1"
  },
  "network": {
    "proxyIP": "10.0.1.100",
    "masterIPs": [
      "10.0.1.10",
      "10.0.1.11", 
      "10.0.1.12"
    ],
    "workerIPs": [
      "10.0.1.20",
      "10.0.1.21",
      "10.0.1.22",
      "10.0.1.23",
      "10.0.1.24",
      "10.0.1.25"
    ]
  },
  "storage": {
    "device": "/dev/sdb",
    "nfsMountPath": "/data/nfs"
  },
  "ssh": {
    "user": "ubuntu",
    "keyPath": "~/.ssh/id_rsa"
  },
  "k3s": {
    "token": null,
    "disableServices": ["traefik"],
    "tlsSans": []
  },
  "operations": {
    "drainTimeout": 300,
    "upgradeStrategy": "rolling",
    "backupRetention": 7
  }
}